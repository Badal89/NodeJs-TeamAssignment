
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Forms</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <style>
    body {
      min-height: 100vh;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      background-image: url('/static/images/image copy 3.png'); 
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
     
    }

    .container {
      margin-top: 50px;
    }

    h1 {
      color: white;
      margin-bottom: 40px;
      text-shadow: 2px 2px 4px #000;
    }

    .card {
      background: rgba(0, 0, 0, 0.6);
      color: white;
      border-radius: 20px;
      border: none;
      box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
    }

    .fill-form-btn {
      background-color: #6a0dad;
      border: none;
    }

    .fill-form-btn:hover {
      background-color: #5c0db2;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1 class="text-center">Available Forms</h1>
    <div id="formsContainer" class="row row-cols-1 row-cols-md-3 g-4"></div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const token = localStorage.getItem("token");

      if (!token) {
        alert("You are not authorized to access this page.");
        window.location.href = "/login.html";
        return;
      }

      try {
        const response = await fetch("http://localhost:5000/auth/forms", {
          method: "GET",
          headers: {
            Authorization: `Bearer ${token}`,
          },
        });

        if (response.status === 200) {
          const data = await response.json();
          const formsContainer = document.getElementById("formsContainer");

          if (data.forms.length > 0) {
            data.forms.forEach((form) => {
              const formCard = document.createElement("div");
              formCard.classList.add("col");
              formCard.innerHTML = `
                <div class="card p-4">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                      <h5 class="card-title">${form.title}</h5>
                      <p class="card-text">Number of Fields: ${form.noOfFields}</p>
                    </div>
                    <button class="btn btn-primary fill-form-btn mt-3" data-form-id="${form.formId}">Fill Form</button>
                  </div>
                </div>
              `;
              formsContainer.appendChild(formCard);
            });

            // Add event listeners to all "Fill Form" buttons
            const fillFormButtons = document.querySelectorAll(".fill-form-btn");
            fillFormButtons.forEach((button) => {
              button.addEventListener("click", (e) => {
                const formId = e.target.getAttribute("data-form-id");
                openForm(formId);
              });
            });
          } else {
            formsContainer.innerHTML = "<p class='text-white'>No forms available.</p>";
          }
        } else {
          alert("Failed to load forms.");
        }
      } catch (error) {
        console.error("Error fetching forms:", error);
      }
    });

    function openForm(formId) {
      window.location.href = `/forms/${formId}/?role=user`; // Redirect to the form page
    }
  </script>
</body>
</html>
