<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />
  
  <style>
    body {
      min-height: 100vh;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background-image: url('/static/images/image copy 3.png'); 
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
     
    }

    .card {
      background: rgba(7, 7, 7, 0.6);
      color: rgb(246, 242, 242);
      border: none;
      border-radius: 20px;
      padding: 30px;
    
    }

  

    #fillFormButton {
      background-color: #6a0dad;
      border: none;
      margin-top: 20px;
    }

    #fillFormButton:hover {
      background-color: #5c0db2;
    }

    .card-title {
      color: #e0e0e0;
    }

    .card-text {
      font-size: 0.9rem;
      color: #cccccc;
    }

    .form-list {
      display: grid;
      gap: 1rem;
      margin-top: 20px;
    }
  </style>
 
</head>
 
<body>
  <div class="container">
    <div class="card p-5 shadow-lg">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 id="welcomeMessage" class="mb-0">Welcome, User</h1>
        <button id="logoutBtn" class="btn btn-danger">Logout</button>
      </div>
  
      <div id="formsContainer">
        <h2 class="mb-3">Your Filled Forms</h2>

        <div id="formList" class="form-list"></div>
      </div>
  
      <button id="fillFormButton" class="btn btn-primary w-100 mt-4">Fill a New Form</button>
    </div>
  </div>
  
 
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const token = localStorage.getItem("token");
      const userId = localStorage.getItem("userId");
 
      if (!token || !userId) {
        alert("You are not authorized to access this page.");
        window.location.href = "/login.html";
        return;
      }
 
      try {
        const response = await fetch(`http://localhost:5000/auth/user/${userId}/forms`, {
          method: "GET",
          headers: {
            Authorization: `Bearer ${token}`,
          },
        });
 
        if (response.status === 200) {
          const data = await response.json();
          const filledFormsContainer = document.getElementById("formList");
 
          if (data.formData.length > 0) {
            filledFormsContainer.innerHTML = "";
            data.formData.forEach((response) => {
              const formCard = document.createElement("div");
              formCard.classList.add("form-item");
              formCard.innerHTML = `
                <div class="card p-3">
                  <div class="card-body">
                    <h5 class="card-title">${response.title}</h5>
                    <p class="card-text">${JSON.stringify(response.noOfFields)}</p>
                  </div>
                </div>
              `;
              filledFormsContainer.appendChild(formCard);
            });
          } else {
            filledFormsContainer.innerHTML = "<p>No forms filled yet.</p>";
          }
        } else {
          alert("Failed to load your filled forms.");
        }
      } catch (error) {
        console.error("Error fetching filled forms:", error);
      }
 
      document.getElementById("fillFormButton").addEventListener("click", () => {
        window.location.href = "/all-forms";
      });
    });


    document.getElementById("logoutBtn").addEventListener("click", function () {
    localStorage.removeItem("token");
    localStorage.removeItem("userId");
    window.location.href = "/"; 
});


  
  </script>
</body>
</html>
 
 
