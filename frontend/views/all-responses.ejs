
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Responses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background: url('/static/images/image copy 3.png') no-repeat center center fixed;
      background-size: cover;
      color: white;
    }

    .container {
      text-align: center;
      max-width: 800px;
      background: rgba(0, 0, 0, 0.6);
      padding: 40px 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 30px;
      color: #fff;
    }

    table {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
    }

    th, td {
      padding: 12px;
      border: 1px solid #fff;
      color: #fff;
    }

    th {
      background-color: #051bc2;
    }

    td {
      background-color: rgba(255, 255, 255, 0.1);
    }

    button {
      padding: 8px 16px;
      border: none;
      background-color: #03109c;
      color: white;
      font-weight: bold;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #b2b5c1;
      color: black;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>All Responses</h1>
    <table>
      <thead>
        <tr>
          <th>S. No</th>
          <th>User ID</th>
          <th>Show</th>
        </tr>
      </thead>
      <tbody>
        <!-- Table rows will be populated by JavaScript -->
      </tbody>
    </table>
  </div>

  <script>
    function showResponse(event){
        const row = event.target.closest('tr');
        const userId = row.children[1].textContent;
        const formId = parseInt(window.location.pathname.split("/")[2]);
        window.location.href = `${window.origin}/form/${formId}/responses/${userId}`;
    }

    async function getResponses(){
        const token = localStorage.getItem("token");
        const formId = parseInt(window.location.pathname.split("/")[2]);
        try {
            const responses = await fetch(`http://localhost:5000/admin/form/${formId}/responses`, {
                headers: { Authorization: `Bearer ${token}` }
            });
            return responses.json();
        } catch (error) {
            console.log(error);
        }
    }

    document.addEventListener("DOMContentLoaded", function(){
        const tbody = document.querySelector("tbody");
        getResponses().then(data => {
            data["data"].forEach((res, index) => {
                const row = document.createElement("tr");
                row.innerHTML = `
                    <td>${index + 1}</td>
                    <td>${res["_id"]}</td>
                    <td><button class="showResponse">Show Response</button></td>
                `;
                tbody.appendChild(row);
            });

            document.querySelectorAll(".showResponse").forEach(button => {
                button.addEventListener("click", showResponse);
            });
        });
    });
  </script>
</body>
</html>
